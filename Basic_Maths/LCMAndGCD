// LCM and GCD of two numbers
// result is stored in a vector(lcm,gcd)
# include <bits/stdc++.h>
using namespace std;


vector<int> lcmAndGcd(int a, int b) {
    vector<int> res(2);
    int maximum = max(a,b);
    int minimum = min(a,b);
    if (a==b) {
        res[0] = a;
        res[1] = b;
    }
    for (int i=minimum; i>=1; i--) {
        if ((a%i==0)&&(b%i==0)) {
            res[1] = i;
            break;
        }
    }
    res[0] = (a/(res[1]))*b;
    return res;
}

int main() {
    int a,b;
    cout << "Enter a and b: ";
    cin >> a >> b;
    vector<int> result = lcmAndGcd(a, b);
    cout << "LCM: " << result[0] << endl << "GCD: " << result[1];
    return 0;
}
